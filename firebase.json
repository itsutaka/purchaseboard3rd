{
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "public": "dist/client",
    "ignore": [
      "firebase.json",
      "database.rules.json",
      "storage.rules.json"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
